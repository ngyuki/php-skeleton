{
    "name": "ngyuki/php-skeleton",
    "description": "php skeleton",
    "type": "library",
    "keywords": [ "skeleton" ],
    "homepage": "https://github.com/ngyuki/php-skeleton",
    "license": "MIT",
    "authors": [
        { "name": "Toshiyuki Goto", "email": "ngyuki.jp@gmail.com" }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "repositories": {
        "pharhub": {
            "type": "composer",
            "url": "https://packages.pharhub.dev/"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-simplexml": "*",
        "ext-pcre": "*"
    },
    "require-dev": {
        "pharhub/composer-require-checker": "^2.1",
        "pharhub/phan": "^3.2",
        "pharhub/php-coveralls": "^2.4",
        "pharhub/php-cs-fixer": "^2.17",
        "pharhub/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "ngyuki\\Skeleton\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.0.x-dev"
        }
    },
    "bin": [
        "bin/skeleton"
    ],
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit.phar --colors=always"
        ],
        "coverage": [
            "@php vendor/bin/phpunit.phar --colors=always --coverage-html coverage"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer.phar fix --dry-run --diff --ansi -v"
        ],
        "fix": [
            "@php vendor/bin/php-cs-fixer.phar fix --diff --ansi -v"
        ],
        "phan": [
            "@php vendor/bin/phan.phar -p --color"
        ],
        "composer-require-checker": [
            "@php vendor/bin/composer-require-checker.phar --ansi -vvv"
        ],
        "qa": [
            "@composer cs",
            "@composer phan",
            "@composer test",
            "@composer composer-require-checker"
        ]
    }
}
