{
    "name": "ngyuki/php-skeleton",
    "description": "php skeleton",
    "type": "library",
    "keywords": [ "skeleton" ],
    "homepage": "https://github.com/ngyuki/php-skeleton",
    "license": "MIT",
    "authors": [
        { "name": "ngyuki", "email": "ngyuki.jp@gmail.com" }
    ],
    "config": {
        "platform": {
            "php": "7.2"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-pcre": "*"
    },
    "require-dev": {
    },
    "autoload": {
        "psr-4": {
            "ngyuki\\Skeleton\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.0.x-dev"
        }
    },
    "bin": [
        "bin/skeleton"
    ],
    "scripts": {
        "test": [
            "@php tools/phpunit --colors=always"
        ],
        "coverage": [
            "@php tools/phpunit --colors=always --coverage-html coverage"
        ],
        "cs": [
            "@php tools/php-cs-fixer fix --dry-run --diff --ansi -v"
        ]
    }
}
